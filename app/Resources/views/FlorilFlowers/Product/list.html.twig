{% extends 'base.html.twig' %}
{% block body %}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Unit measure</th>
            <th>Quantity</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>
                    <a href="{{ path('product_show', {'id' : product.id}) }}">{{ product.name }}</a>
                </td>
                <td>{{ product.category.name }}</td>
                <td>{{ product.unitMeasure }}</td>
                <td>{{ product.quantity }}</td>
                <td><a href="{{ path('edit_product',{'id' : product.id}) }}">Edit!</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}